<main>
    <container class="d-flex bg-white justify-content-center flex-column">
        <div class="d-flex bg-white justify-content-center my-2">
            <img src="images/Lego_Heart.png" alt="Lego heart" width="80" height="80" />
        </div>
        <h1 class="text-center fw-bold">COLLECTION</h1>
    </container>
    <section class="collection-table">
        <article class="collection-table-hdr">
            {{!-- <p>Product Details</p> --}}
            <div>
                <input placeholder="Collection Library" />
                <button class="collection-add_new">+ Add New</button>
            </div>
        </article>
        <article class="collection-table_section">
            <table class="table table-striped">
                <thead>
                    <tr>
                        {{!-- <th scope="col">List #</th> --}}
                        <th scope="col">Item #</th>
                        <th scope="col">Image</th>
                        <th scope="col">Set Name</th>
                        <th scope="col">Set Details</th>
                        {{!-- <th scope="col">Price</th>
                        <th scope="col">Availability</th> --}}
                    </tr>
                </thead>
                <tbody>
                    {{#each collection}}
                    <tr>
                        {{!-- <th scope="row">{{collection.length}}</th> --}}
                        <td>{{set_num}}</td>
                        <td><img src={{set_img_url}} /></td>
                        <td>{{name}}</td>
                        <td>Feature coming soon!</td>
                        {{!-- <td>${{price}}</td>
                        <td>{{availability}}</td> --}}
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </article>
        <article>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-5">
                    <li class="page-item">
                        <a class="page-link">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </article>
    </section>
</main>
