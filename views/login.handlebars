<div class="background">
  <div class="container">
    <div class="logo">
      <img src="images/MasterBuilder-logo2-r2.png" alt="Master Builder Logo" />
    </div>
    <input type="checkbox" id="flip">
    <div class="cover">
      <div class="front">
        <img src="images/flat-lay-interlocking-toy-blocks-baby-shower (1).jpg" alt="Lego Instructions steps 1 - 10" />
      </div>
    </div>
    <form action="#">
      <div class="form-content">
        <div class="login-form">
          <h1 class="title">Let's Build!</h1>
          <div class="input-boxes">
            <div class="input-box">
              <i class="bi bi-person-fill"></i>
              {{!-- TODO: for future development, make it optional to use either username or email --}}
              <input type="text" placeholder="Username*" id="username-login" />
            </div>
            <div class="input-box">
              <i class="bi bi-lock-fill"></i>
              <input type="password" placeholder="Password*" id="password-login" />
            </div>
            <div class="text"><a href="#">Forgot Password?</a></div>
            <div class="button input-box">
              <input type="submit" value="Submit" id="loginbtn" />
            </div>
            <div class="text sign-up-text">
              Not a Master Builder? <label for="flip"> Sign up now</label>
            </div>
          </div>
        </div>
        <div class="signup-form" id="signup-form">
          <h1 class="title">Become a Builder!</h1>
          <div class="input-boxes">
            <div class="input-box">
              <i class="bi bi-person-fill"></i>
              <input id="name-signup" type="text" placeholder="Create a username*" />
            </div>
            <div class="input-box">
              <i class="bi bi-envelope-at-fill"></i>
              <input id="email-signup" type="text" placeholder="Enter your email*" />
            </div>
            <div class="input-box">
              <i class="bi bi-lock-fill"></i>
              <input id="password-signup" type="password" placeholder="Create a password*" />
            </div>
            <div class="button input-box">
              <input type="submit" value="Submit" id="signupbtn" />
            </div>
            <div class="text sign-up-text">
              Already have an account?
              <label for="flip"> Let's build!</label>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
